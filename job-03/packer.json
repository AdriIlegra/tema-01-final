{
  "variables": {
    "dockerhub_username": "{{user `DOCKERHUB_USERNAME`}}",
    "dockerhub_password": "{{user `DOCKERHUB_PASSWORD`}}"
  },
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:20.04",
      "commit": true,
      "author": "seu_email@example.com",
      "changes": [
        "EXPOSE 8090",
        "CMD [\"apache-tomcat-10.0.12/bin/catalina.sh\", \"run\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get update",
        "apt-get install -y apache2"

      ]
    }
  ],
  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "adriananogueira/tema_01_final",
      "tag": "latest"
    }
  ]
}
