pipeline {
    agent any
    environment {
        registry = "adriananogueira/tema_01_final" // Seu nome de registro/reposit√≥rio no Docker Hub
               registryCredential = 'dockerhub_credentials' // Nome da credencial de Docker Hub configurada no Jenkins
               dockerImage = "adriananogueira/tema_01_final:tagname" // Nome e tag da imagem Docker
           }
    stages {
        stage('Build and Push Docker Image') {
            steps {
                sh "docker login -u ${DOCKERHUB_USERNAME} -p ${DOCKERHUB_PASSWORD}"
                sh "docker build -t adriananogueira/tema_01_final:tagname ."
                sh "docker push adriananogueira/tema_01_final:tagname"
            }
        }
    }
}
