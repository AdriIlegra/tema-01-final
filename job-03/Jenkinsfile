pipeline {
    agent {
        docker {
            // Use uma imagem Docker que tenha o Docker instalado
            image 'docker:latest'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    stages {
        stage('Build and Push Docker Image') {
            steps {
                script {
                    // Seu código para construir e push da imagem Docker
                    sh 'docker build -t adriananogueira/tema_01_final:tagname .'
                    sh 'docker push adriananogueira/tema_01_final:tagname'
                }
            }
        }
        // Outros estágios do seu pipeline
    }
}
