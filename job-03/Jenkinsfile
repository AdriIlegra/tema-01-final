pipeline {
    agent any
    environment {


        // Defina o nome do registro DockerHub
        registry = "adriananogueira/tema_01_final"
        // Defina o nome e a tag da imagem Docker
        dockerImage = "adriananogueira/tema_01_final:latest"




    }
    stages {
        stage('Build and Push Docker Image') {
            steps {
                script {
                    // Faça login no DockerHub
                    docker.withRegistry( 'dockerhub', registry ) {
                        // Construa a imagem Docker
                        sh "docker build -t $dockerImage ."
                        // Faça push da imagem Docker
                        sh "docker push $dockerImage"
                    }

            }
        }

        stage('Run Docker Image') {
            steps {
                // Execute o contêiner a partir da imagem Docker
                sh "docker run -d -p 8090:8090 $dockerImage"
                // Verifique os contêineres em execução
                sh "docker ps -a"
            }
        }
    }
}
}



