pipeline {
    agent any
    environment {
        registry = "adriananogueira/tema_01_final" // Seu nome de registro/reposit√≥rio no Docker Hub
               registryCredential = 'dockerhub' // Nome da credencial de Docker Hub configurada no Jenkins
               dockerImage = "adriananogueira/tema_01_final:latest" // Nome e tag da imagem Docker
           }
    stages {
           stage('Cloning Git') {
                steps {
                     git '
                        credentialsId: 'gitlab', url: 'https://gitlab.com/adriananogueira/tema_01_final.git'
                }
            }
        stage('Build Docker Image') {
            steps {

                sh "docker login -u adriananogueira -p 123Mudar@"
                sh "docker build -t adriananogueira/tema_01_final:latest ."
                sh "docker pull adriananogueira/tema_01_final"
            }
        }

        stage('Run Docker Image') {
            steps {
                sh "docker run -d -p 8083:8083 adriananogueira/tema_01_final"
                sh "docker ps -a"
            }
        }
    }
}



