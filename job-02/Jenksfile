pipeline {
    agent any

    environment {
        ARTIFACTORY_SERVER_ID = 'tema-final-01-artifactory'
        DOCKERHUB_USERNAME = credentials('dockerhub')
        DOCKERHUB_PASSWORD = credentials('dockerhub')
    }

    stages {
        stage('Verificação do Código') {
            steps {
                checkout scm
            }
        }

        stage('Download de Artefato do JFrog Artifactory') {
            steps {
                script {
                    def rtServerId = "tema-final-01-artifactory"
                    def rtDownloadSpec = """{
                        "files": [
                            {
                                "pattern": "tema-final-01/calculadora.war",
                                "target": "job-01/build/libs/calculadora.war"
                            }
                        ]
                    }"""
                }
            }
        }

       stage('Construir a Imagem Docker com o Packer') {
           steps {
               sh 'packer build -var "DOCKERHUB_USERNAME=${DOCKERHUB_USERNAME}" -var "DOCKERHUB_PASSWORD=${DOCKERHUB_PASSWORD}" job-02/packer.json'
           }
       }

        stage('Enviar a Imagem Docker para o Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials-id', usernameVariable: 'DOCKERHUB_USERNAME', passwordVariable: 'DOCKERHUB_PASSWORD')]) {
                    sh 'docker push adriananogueira/tema_01_final:latest'
                }
            }
        }
    }
}
