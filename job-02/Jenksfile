pipeline {
    agent any

    environment {
        ARTIFACTORY_SERVER_ID = 'tema-final-01-artifactory'
        DOCKERHUB_USERNAME = credentials('dockerhub')
        DOCKERHUB_PASSWORD = credentials('dockerhub')
               sh 'pwd'

    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Download Artefato do JFrog Artifactory') {
            steps {
                script {
                    def rtServerId = "tema-final-01-artifactory"
                    def rtDownloadSpec = """{
                        "files": [
                            {
                                "pattern": "tema-final-01/calculadora.war",
                                "target": "job-01/build/libs/calculadora.war"
                            }
                        ]
                    }"""
                }
            }
        }

       stage('Build Docker Image with Packer') {
           steps {
               sh 'packer build -var "DOCKERHUB_USERNAME=${DOCKERHUB_USERNAME}" -var "DOCKERHUB_PASSWORD=${DOCKERHUB_PASSWORD}" packer.json'
           }
       }

        stage('Deploy Application with Ansible') {
            steps {
                sh 'ansible-playbook -i inventory.ini playbook.yml'
            }
        }

        stage('Push Docker Image to Docker Hub') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials-id', usernameVariable: 'DOCKERHUB_USERNAME', passwordVariable: 'DOCKERHUB_PASSWORD')]) {
                    sh 'docker push adriananogueira/tema_01_final:tagname'
                }
            }
        }
    }
}
