pipeline {
    agent any

    stages {
        stage('Retrieving WAR file from JFrog Artifactory') {
            steps {
                script {
                    def rtServerId = "tema-final-01-artifactory"
                    def rtDownloadSpec = """{
                        "files": [
                            {
                                "pattern": "tema-final-01/calculadora.war",
                                "target": "job-01/build/libs/calculadora.war"
                            }
                        ]
                    }"""
                }
            } stage('Packer Build Image') {
                        steps {
                                    withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'DOCKERHUB_USERNAME', passwordVariable: 'DOCKERHUB_PASSWORD')]) {
                                        sh "packer build --var dockerhub_username=$DOCKERHUB_USERNAME --var dockerhub_password=$DOCKERHUB_PASSWORD packer.json"


        }
    }
}
