pipeline {
    agent any

    stages {
        stage('Retrieving WAR file from JFrog Artifactory') {
            steps {
                script {
                    def rtServerId = "tema-final-01-artifactory"
                    def rtDownloadSpec = """{
                        "files": [
                            {
                                "pattern": "tema-final-01/calculadora.war",
                                "target": "job-01/build/libs/calculadora.war"
                            }
                        ]
                    }"""
                    server = Artifactory.server rtServerId
                    def buildInfo = Artifactory.newBuildInfo()
                    server.download spec: rtDownloadSpec, buildInfo: buildInfo
                    server.publishBuildInfo buildInfo
                }
            }
        }
        stage('Deploying WAR file to Tomcat') {
            steps {
                script {

                    def uploadSpec = """{
                        "files": [
                            {
                                "pattern": "job-01/build/libs/calculadora.war",
                                "target": "tema-final-01/calculadora.war"
                            }
                        ]
                    }"""
                    server.upload spec: uploadSpec
                }
            }


        }
    }
}


