pipeline {
    agent any

    environment {
        DOCKERHUB_USERNAME = credentials('dockerhub')


    }

pipeline {
    agent any

    environment {
        // Defina as variáveis de ambiente necessárias, como as credenciais do Artifactory
        ARTIFACTORY_SERVER_ID = 'artifactory-server'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Download Artefato do JFrog Artifactory') {
            steps {
                script {
                    def server = Artifactory.server ARTIFACTORY_SERVER_ID
                    def rtDownloadSpec = """{
                        "files": [
                            {
                                "pattern": "my-repo/my-artifact/*.war", // Substitua com o padrão do seu artefato
                                "target": "${env.WORKSPACE}/my-artifact.war" // Define o destino local
                            }
                        ]
                    }"""
                    def rtBuildInfo = rtDownload server: server, spec: rtDownloadSpec
                }
            }
        }
    }
}
