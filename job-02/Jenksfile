pipeline {
    agent any

    environment {
        // Defina as variáveis de ambiente necessárias, como as credenciais do Artifactory
        ARTIFACTORY_SERVER_ID = 'calculadora'

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Download Artefato do JFrog Artifactory') {
            steps {
                script {
                    def server = Artifactory.server ARTIFACTORY_SERVER_ID
                    def rtDownloadSpec = """{
                        "files": [
                            {
                                "pattern": "tema-final-01/calculadora.war",
                                                             "target": "job-01/build/libs/calculadora.war"
                            }
                        ]
                    }"""
                    def rtBuildInfo = rtDownload server: server, spec: rtDownloadSpec
                }
            }
        }
    }
}
