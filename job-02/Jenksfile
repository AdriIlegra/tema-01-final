pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub')
    }

    stages {
        stage('Verificação do Código') {
            steps {
                checkout scm
            }
        }

        stage('Download de Artefato do JFrog Artifactory') {
            steps {
                script {
                    def rtServerId = "calculadora"
                    def rtDownloadSpec = """{
                        "files": [
                            {
                                "pattern": "tema-final-01/calculadora.war",
                                "target": "job-01/build/libs/calculadora.war"
                            }
                        ]
                    }"""
                    server = Artifactory.server rtServerId
                }
            }
        }

        stage('Construir a Imagem Docker com o Packer') {
            steps {
                sh 'packer plugins install github.com/hashicorp/docker'
                       sh 'packer plugins install github.com/hashicorp/ansible'
                       sh 'packer build -var "dockerhub_credentials=${DOCKERHUB_CREDENTIALS_USR}:${DOCKERHUB_CREDENTIALS_PSW}" -var "artifactory_credentials=${ARTIFACTORY_CREDENTIALS_USR}:${ARTIFACTORY_CREDENTIALS_PSW}" -var "artifactory_url=${ARTIFACTORY_URL}" -var "artifactory_repo=${ARTIFACTORY_REPO}" -var "artifactory_repo_key=${ARTIFACTORY_REPO_KEY}" -var "artifactory_repo_user=${ARTIFACTORY_REPO_USER}" -var "artifactory_repo_password=${ARTIFACTORY_REPO_PASSWORD}" -var "artifactory_repo_email=${ARTIFACTORY_REPO_EMAIL}" -var "artifactory_repo_package=${ARTIFACTORY_REPO_PACKAGE}" -var "artifactory_repo_version=${ARTIFACTORY_REPO_VERSION}" -var "artifactory_repo_package_file=${ARTIFACTORY_REPO_PACKAGE_FILE}" -var "artifactory_repo_package_file_path=${ARTIFACTORY_REPO_PACKAGE_FILE_PATH}" -var "artifactory_repo_package_file_target=${ARTIFACTORY_REPO_PACKAGE_FILE_TARGET}" job-02/packer.json'
            }
        }

        stage('Enviar a Imagem Docker para o Docker Hub') {
            steps {
                sh 'docker login -u ${DOCKERHUB_CREDENTIALS_USR} -p ${DOCKERHUB_CREDENTIALS_PSW}'
                sh 'docker push adriananogueira/tema_01_final:latest'
            }
        }
    }
}
