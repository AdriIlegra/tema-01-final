pipeline {
    agent any

    stages {
        stage('Retrieve WAR file from JFrog Artifactory') {
            steps {
                script {
                    def rtServerId = "tema-final-01-artifactory"
                    def rtDownloadSpec = """{
                        "files": [
                            {
                                "pattern": "tema-final-01/calculadora.war",
                                "target": "job-01/build/libs/calculadora.war"
                            }
                        ]
                    }"""

                    // Use the Artifactory plugin to download the WAR file
                    def buildInfo = server.download spec: rtDownloadSpec, serverId: rtServerId

                    // Check if the download was successful
                    if (buildInfo) {
                        echo "WAR file downloaded successfully."
                    } else {
                        error "Failed to download the WAR file from Artifactory."
                    }
                }
            }
        }

        stage('Build Docker Image with Packer') {
            steps {
                script {
                    // Define o nome da credencial do Docker Hub
                    def dockerhubCredentialId = 'dockerhub'

                    // Use as credenciais do Docker Hub no comando Packer
                    withCredentials([usernamePassword(credentialsId: dockerhubCredentialId, usernameVariable: 'DOCKERHUB_USERNAME', passwordVariable: 'DOCKERHUB_PASSWORD')]) {
                        sh "packer build -var 'dockerhub_username=\$DOCKERHUB_USERNAME' -var 'dockerhub_password=\$DOCKERHUB_PASSWORD' packer.json"
                    }
                }
            }
        }
    }
}

