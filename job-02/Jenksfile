pipeline {
    agent any

    stages {
        stage('Retrieving WAR file from JFrog Artifactory') {
            steps {
                script {
                    def rtServerId = "tema-final-01-artifactory"
                    def rtDownloadSpec = """{
                        "files": [
                            {
                                "pattern": "tema-final-01/calculadora.war",
                                "target": "job-01/build/libs/calculadora.war"
                            }
                        ]
                    }"""

                    rtDownload(
                        serverId: rtServerId,
                        spec: rtDownloadSpec
                    )
                }
            }
        }

          stage('Deploying WAR file to Tomcat') {
                steps {
                 script {
                      def server = Tomcat.server('tomcat-01')
                      def deployer = server.deployer()
                      deployer.password = 'tomcat'
                      deployer.username = 'tomcat'
                      deployer.path = '/manager/text'
                      deployer.host = 'localhost'
                      deployer.port = '8080'
                      deployer.timeout = '10000'
                      deployer.remote {
                            file = 'job-01/build/libs/calculadora.war'
                      }
                      deployer.deploy()
                 }
                }
          }
    }
}