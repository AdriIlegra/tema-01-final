pipeline {
    agent any

    stages {
        stage('Retrieving WAR file from JFrog Artifactory') {
            steps {
                script {
                    def rtServerId = "tema-final-01-artifactory"
                    def rtDownloadSpec = """{
                        "files": [
                            {
                                "pattern": "tema-final-01/calculadora.war",
                                "target": "job-01/build/libs/calculadora.war"
                            }
                        ]
                    }"""

                    rtDownload(
                        serverId: rtServerId,
                        spec: rtDownloadSpec
                    )
                }
            }
        }

        // ... Outras etapas do seu pipeline ...

        stage('Build Docker Image') {
            steps {
                // Adicione as etapas para construir sua imagem Docker aqui
            }
        }

        // ... Outras etapas do seu pipeline ...

    }

    post {
        success {
            // Ação a ser executada em caso de sucesso (opcional)
            echo "Pipeline concluída com sucesso!"
        }
    }
}
